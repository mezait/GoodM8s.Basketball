@model GoodM8s.Basketball.ViewModels.DynamicIndexViewModel
@{
    Layout.Title = T("Players").ToString();
}
<fieldset>
    @using (Html.BeginFormAntiForgeryPost())
    {
        @Html.ValidationSummary()
        <div class="manage">@Html.ActionLink(T("Add a new player").ToString(), "Create", new { }, new { @class = "button primaryAction" })</div>
        <table class="items">
            <thead>
                <tr>
                    <th scope="col">@T("Number")
                    </th>
                    <th scope="col">@T("First Name")
                    </th>
                    <th scope="col">@T("Last Name")
                    </th>
                    <th scope="col">@T("Actions")
                    </th>
                </tr>
            </thead>
            @foreach (var player in Model.List)
            {
                <tr>
                    <td>@player.Number
                    </td>
                    <td>@player.FirstName
                    </td>
                    <td>@player.LastName
                    </td>
                    <td>
                        <div>
                            @Html.ActionLink(T("Edit").ToString(), "Edit", new { player.Id }) |
                            @Html.ActionLink(T("Delete").ToString(), "Delete", new { player.Id }, new { itemprop = "RemoveUrl UnsafeUrl" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    @Display(Model.Pager)
</fieldset>
